@model Bio
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4">

                <form method="post" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label asp-for="WhitePhotoMediumFile" class="form-label">WhitePhotoMedium</label>
                        <input asp-for="WhitePhotoMediumFile" accept="image/*" class="form-control">
                        <span asp-validation-for="@Model.WhitePhotoMediumFile" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="WhitePhotoFile" class="form-label">WhitePhotoFile</label>
                        <input asp-for="WhitePhotoFile" accept="image/*" class="form-control">
                        <span asp-validation-for="@Model.WhitePhotoFile" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Facebook" class="form-label">Facebook</label>
                        <input asp-for="Facebook" class="form-control">
                        <span asp-validation-for="@Model.Facebook" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Pinterest" class="form-label">Pinterest</label>
                        <input asp-for="Pinterest" class="form-control">
                        <span asp-validation-for="@Model.Pinterest" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Instagram" class="form-label">Instagram</label>
                        <input asp-for="Instagram" class="form-control">
                        <span asp-validation-for="@Model.Instagram" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="YouTube" class="form-label">YouTube</label>
                        <input asp-for="YouTube" class="form-control">
                        <span asp-validation-for="@Model.YouTube" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Twitter" class="form-label">Twitterv</label>
                        <input asp-for="Twitter" class="form-control">
                        <span asp-validation-for="@Model.Twitter" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label">Phone</label>
                        <input asp-for="Phone" class="form-control">
                        <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <input asp-for="Description" class="form-control">
                        <span asp-validation-for="@Model.Description" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>